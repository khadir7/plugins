{
  "name": "Dictionary Widget",
  "manifest_version": 2,
  "version": "1.0.0",
  "browser_action": {},
  "icons": {
    "16": "widgetIcon.png",
    "48": "widgetIcon.png",
    "128": "widgetIcon.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["content.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "http://*/",
    "https://*/*",
    "tabs",
    "contextMenus",
    "storage"
  ],
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y",
        "chromeos": "Ctrl+Shift+U",
        "linux": "Ctrl+Shift+J"
      }
    }
  },

  "web_accessible_resources": ["*.html"]
}
